<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  </head>
  <body>
    <%- include('nav'); -%>
    <h1 class="text-center"><%= title %></h1>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Password details</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
          <% if(records.length > 0) {
            
            records.forEach(function(row){ %>
              <tr>
                <td><%= row.pass_cat.category %></td>
                <td><%- row.password_detail %></td>
                <td>
                  <a href="/password_details_edit/<%= row._id %>">Edit</a>
                  <a href="/passworddetalcategory/delete/<%= row._id %>" onclick="return confirm('are you sure?')">delete</a>
                </td>
            </tr>
          <%  });

          } %>
           
        </tbody>
    </table>
    
  </body>
</html>


