<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  </head>
  <body>
    <%- include('nav'); -%>
    <h1 class="text-center"><%= title %></h1>
    <div id="login">
      <div class="container">
          <div id="login-row" class="row justify-content-center align-items-center">
              <div id="login-column" class="col-md-6">
                  <div id="login-box" class="col-md-12">
                      <form id="category-form" class="form" action="/update_category" method="post">
                          <h3 class="text-center text-info">Category</h3>
                          <% 
                          if(msg !=''){ %>
                              <%= msg %>
                         <% }
                          %>
                          <% 
                          if(error !=''){ %>
                            <p style="color: red;">  <%= error.category.msg %></p>
                         <% }
                          %>
                          <div class="form-group">
                              <label for="username" class="text-info">Category Name:</label><br>
                              <input type="text" name="category" value="<%= data.category %>" id="category" class="form-control">
                              <input type="hidden" name="id" value="<%= data._id %>">
                          </div>
                          <div class="form-group">
                              <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                          </div>
                      </form>
                  </div>
              </div>
          </div>
      </div>
  </div>
  </body>
</html>


