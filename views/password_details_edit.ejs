<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.17.2/standard/ckeditor.js"></script>
  </head>
  <body>
    <%- include('nav'); -%>
    <h1 class="text-center"><%= title %></h1>
    <div id="login">
      <div class="container">
          <div id="login-row" class="row justify-content-center align-items-center">
              <div id="login-column" class="col-md-6">
                  <div id="login-box" class="col-md-12">
                      <form id="category-form" class="form" action="/add_password" method="post">
                          <h3 class="text-center text-info">Password</h3>
                          <div class="form-group">
                              <label for="username" class="text-info">Category Name:</label><br>
                              <select name="category" id="category" class="form-control">
                                  <option value="">Select</option>
                                  <% if(records.length > 0){
                                    records.forEach(function(row){
                                                 %>
                                    <option value="<%= row.category %>" <% if(row.category == record.password_category){ %> selected <% } %> ><%= row.category %></option>             
                                 <% })  } %>               
                              </select>
                          </div>
                          <div class="form-group">
                            <label for="Password" class="text-info">Password:</label><br>
                            <textarea  name="editor1"><%= record.password_detail%></textarea>
                        </div>
                         
                          <div class="form-group">
                              <input type="submit" name="submit" class="btn btn-info btn-md" value="save">
                          </div>
                      </form>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <script>
    CKEDITOR.replace( 'editor1' );
</script>  
</body>

</html>


